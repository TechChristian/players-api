generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Player {
  user_id    Int     @id @default(autoincrement())
  first_name String
  last_name  String 
  position  String
  age      Int
  club_id  Int
  club     Club    @relation(fields: [club_id], references: [club_id])
}

model Club {
  club_id   Int    @id @default(autoincrement())
  club_name String @unique
  country   String  
  players   Player[]
}